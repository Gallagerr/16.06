<Window x:Class="_16._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16._06"
        mc:Ignorable="d"
        Title="Word" Height="450" Width="800">
    <Grid>
        <Menu Name="menu" Height="20" VerticalAlignment="Top" Background="#FFDE9292">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" Name="create" Click="Create_Click"/>
                <MenuItem Header="Открыть" Name="open" Click="Open_Click"/>
                <MenuItem Header="Сохранить" Name="save" Click="Save_Click"/>
            </MenuItem>
            <MenuItem Header="Форматировать">
                <MenuItem Header="Шрифт" Name="font" Click="Font_Click"/>
            </MenuItem>
        </Menu>
        <RichTextBox Name="rtb" Margin="0,20,0,0" Background="White" >
            <FlowDocument>
                <Paragraph>
                    <Run />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
